<% if @errors %>
  <% @errors.each do |error| %>
  <%= error %>
  <% end %>
<% end %>

<%= form_for(@heroine) do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br>
  <%= f.collection_select :power_id, Power.all, :id, :name %>
  <br>
  <%= f.submit %>

<% end %>

<%= form_tag heroine_path(@heroine.id), method: "delete" do %>
  <%= submit_tag "Delete"%>
<% end %>
